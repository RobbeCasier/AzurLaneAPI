             xmlns:vm="clr-namespace:ALListViewer.ViewModel"
             xmlns:dg="clr-namespace:Xamarin.Forms.DataGrid;assembly=Xamarin.Forms.DataGrid"
             x:Class="ALListViewer.View.MainPage"
             Title="List">
